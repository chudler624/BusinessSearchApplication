@model BusinessSearch.Models.ViewModels.EditCallScriptViewModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="fw-bold mb-0">Edit Call Script</h2>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="fas fa-arrow-left me-2"></i>Back to Scripts
                        </a>
                    </div>

                    <form asp-action="EditCallScript" method="post">
                        <input asp-for="Script.Id" type="hidden" />
                        <input asp-for="Script.CreatedById" type="hidden" />
                        <input asp-for="Script.CreatedDate" type="hidden" />
                        <input asp-for="Script.OrganizationId" type="hidden" />
                        <input asp-for="Script.IsActive" type="hidden" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Script.Name" class="form-label required fw-medium"></label>
                                <input asp-for="Script.Name" class="form-control form-control-lg border-0 bg-light rounded-pill" />
                                <span asp-validation-for="Script.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Script.ScriptType" class="form-label fw-medium">Type</label>
                                <input asp-for="Script.ScriptType" class="form-control form-control-lg border-0 bg-light rounded-pill" list="typeList" placeholder="e.g., Cold Call" />
                                <datalist id="typeList">
                                    @foreach (var type in Model.AvailableTypes)
                                    {
                                        <option value="@type"></option>
                                    }
                                </datalist>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Script.EstimatedDuration" class="form-label fw-medium"></label>
                                <div class="input-group">
                                    <input asp-for="Script.EstimatedDuration" class="form-control form-control-lg border-0 bg-light" type="number" min="1" max="60" />
                                    <span class="input-group-text bg-light border-0">min</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Script.Industry" class="form-label fw-medium"></label>
                                <input asp-for="Script.Industry" class="form-control form-control-lg border-0 bg-light rounded-pill" list="industryList" />
                                <datalist id="industryList">
                                    @foreach (var industry in Model.AvailableIndustries)
                                    {
                                        <option value="@industry"></option>
                                    }
                                </datalist>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Script.Tags" class="form-label fw-medium"></label>
                                <input asp-for="Script.Tags" class="form-control form-control-lg border-0 bg-light rounded-pill" placeholder="Comma-separated tags" />
                            </div>
                            <div class="col-12">
                                <label asp-for="Script.Description" class="form-label fw-medium"></label>
                                <textarea asp-for="Script.Description" class="form-control border-0 bg-light rounded-3" rows="2"></textarea>
                            </div>
                            <div class="col-12">
                                <label asp-for="Script.Content" class="form-label required fw-medium">Script Content</label>
                                <textarea asp-for="Script.Content" class="form-control border-0 bg-light rounded-3" rows="12"></textarea>
                                <span asp-validation-for="Script.Content" class="text-danger"></span>
                                <small class="text-muted">You can use placeholders like {BusinessName}, {ContactName}, {YourName}, etc.</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-light rounded-pill px-4">Cancel</a>
                            <button type="submit" class="btn btn-success rounded-pill px-4">
                                <i class="fas fa-save me-2"></i>Update Script
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .required:after {
            content: " *";
            color: #dc3545;
        }

        .input-group-text {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            border-top-right-radius: 50px;
            border-bottom-right-radius: 50px;
        }

        .input-group .form-control {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            border-top-left-radius: 50px;
            border-bottom-left-radius: 50px;
        }
    </style>
}