@model BusinessSearch.Models.ViewModels.CreateEmailTemplateViewModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="fw-bold mb-0">Create Email Template</h2>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="fas fa-arrow-left me-2"></i>Back to Templates
                        </a>
                    </div>

                    <form asp-action="CreateEmailTemplate" method="post">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label asp-for="Template.Name" class="form-label required fw-medium"></label>
                                <input asp-for="Template.Name" class="form-control form-control-lg border-0 bg-light rounded-pill" />
                                <span asp-validation-for="Template.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Template.Category" class="form-label fw-medium"></label>
                                <input asp-for="Template.Category" class="form-control form-control-lg border-0 bg-light rounded-pill" list="categoryList" />
                                <datalist id="categoryList">
                                    @foreach (var category in Model.AvailableCategories)
                                    {
                                        <option value="@category"></option>
                                    }
                                </datalist>
                            </div>
                            <div class="col-12">
                                <label asp-for="Template.Description" class="form-label fw-medium"></label>
                                <textarea asp-for="Template.Description" class="form-control border-0 bg-light rounded-3" rows="2"></textarea>
                            </div>
                            <div class="col-12">
                                <label asp-for="Template.Subject" class="form-label required fw-medium"></label>
                                <input asp-for="Template.Subject" class="form-control form-control-lg border-0 bg-light rounded-pill" />
                                <span asp-validation-for="Template.Subject" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Template.Body" class="form-label required fw-medium"></label>
                                <textarea asp-for="Template.Body" class="form-control border-0 bg-light rounded-3" rows="15"></textarea>
                                <span asp-validation-for="Template.Body" class="text-danger"></span>
                                <small class="text-muted">You can use placeholders like {BusinessName}, {ContactName}, {Email}, etc.</small>
                            </div>
                            <div class="col-12">
                                <label asp-for="Template.Tags" class="form-label fw-medium"></label>
                                <input asp-for="Template.Tags" class="form-control form-control-lg border-0 bg-light rounded-pill" placeholder="Comma-separated tags" />
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-light rounded-pill px-4">Cancel</a>
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                <i class="fas fa-save me-2"></i>Create Template
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .required:after {
            content: " *";
            color: #dc3545;
        }
    </style>
}
