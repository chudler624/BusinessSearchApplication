@model BusinessSearch.Models.CrmList

<tr>
    <td>
        <a href="@Url.Action("ListView", new { id = Model.Id })" class="text-decoration-none fw-semibold">
            @Model.Name
        </a>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <br />
            <small class="text-muted">@Model.Description</small>
        }
    </td>
    <td>
        @if (!string.IsNullOrEmpty(Model.Industry))
        {
            <span class="badge bg-info">@Model.Industry</span>
        }
        else
        {
            <span class="text-muted">-</span>
        }
    </td>
    <td>
        @if (Model.AssignedTo != null)
        {
            <div class="d-flex align-items-center">
                <span class="badge bg-success me-2">
                    <i class="fas fa-user me-1"></i>
                </span>
                @Model.AssignedTo.Name
            </div>
        }
        else
        {
            <span class="text-muted">Unassigned</span>
        }
    </td>
    <td class="text-center">
        <span class="badge bg-primary">@Model.EntryCount</span>
    </td>
    <td>
        <div class="d-flex flex-column">
            <span>@Model.CreatedDate.ToString("MM/dd/yyyy")</span>
            <small class="text-muted">@Model.CreatedDate.ToString("HH:mm")</small>
        </div>
    </td>
    <td>
        <div class="d-flex justify-content-end gap-2">
            <a href="@Url.Action("ListView", new { id = Model.Id })" 
               class="btn btn-sm btn-primary" 
               title="View Entries">
                <i class="fas fa-eye"></i>
            </a>
            <button type="button" 
                    class="btn btn-sm btn-warning" 
                    onclick="editList(@Model.Id)"
                    title="Edit List">
                <i class="fas fa-edit"></i>
            </button>
            <button type="button" 
                    class="btn btn-sm btn-danger" 
                    onclick="deleteList(@Model.Id)"
                    title="Delete List">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </td>
</tr>
