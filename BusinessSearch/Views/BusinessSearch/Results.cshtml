@model IEnumerable<BusinessSearch.Models.Business>

<h2>Search Results</h2>

<div class="row">
    @foreach (var business in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@business.Name</h5>
                    <p class="card-text">
                        <strong>Phone:</strong> @business.PhoneNumber<br />
                        <strong>Address:</strong> @business.FullAddress<br />
                        <strong>Type:</strong> @business.Type<br />
                        <strong>Website:</strong> @business.Website
                    </p>
                    <form asp-controller="BusinessSearch" asp-action="AddToCrm" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Name" value="@business.Name" />
                        <input type="hidden" name="PhoneNumber" value="@business.PhoneNumber" />
                        <input type="hidden" name="Website" value="@business.Website" />
                        <input type="hidden" name="Type" value="@business.Type" />
                        <input type="hidden" name="FullAddress" value="@business.FullAddress" />
                        <button type="submit" class="btn btn-primary">Add to CRM</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Search</a>
</div>