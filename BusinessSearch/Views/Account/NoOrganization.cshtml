@model NoOrganizationViewModel
@{
    ViewData["Title"] = "Organization Required";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">Organization Required</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">You need to be part of an organization to access this feature.</p>

                    <form asp-action="CreateOrganization" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label for="OrganizationName" class="form-label">Organization Name</label>
                            <input type="text" class="form-control" id="OrganizationName" name="OrganizationName" required />
                            <div class="form-text">Enter a name for your new organization.</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Create Organization</button>
                            <a href="/" class="btn btn-outline-secondary">Back to Home</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}